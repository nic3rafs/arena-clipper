{
    "manifest_version": 2,
    "name": "Save to Are.na",
    "version": "0.1.1",
    "description": "Hoverâ€‘click any image to save it to Are.na",
    "icons": { "48": "icon48.png", "128": "icon128.png" },
    "permissions": [
      "storage",
      "activeTab",
      "identity",
      "https://api.are.na/*",
      "https://dev.are.na/*"
    ],
    "background": {
      "scripts": [
        "src/background.js"
      ]
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": [
          "src/content/core-overlay.js"
        ]
      }
    ],
    "browser_specific_settings": {
      "gecko": {
        "id": "arena-clipper@vladsavruk.com",
        "strict_min_version": "109.0"
      }
    },
    "web_accessible_resources": [
      "arena-logo.svg"
    ]
  }